<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jbp.service.dao.agent.UserRegionMapper">
    <resultMap id="userRegionType" type="com.jbp.common.model.agent.UserRegion">
        <id column="id" property="id"/>
        <result column="uid" property="uid"/>
        <result column="province" property="province"/>
        <result column="city" property="city"/>
        <result column="address" property="address"/>
        <result column="status" property="status"/>
        <result column="account" property="account"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modify" property="gmtModify"/>
    </resultMap>

    <select id="adminPage" resultMap="userRegionType">
        select ur.*, u.real_name, u.account from eb_user_region ur left join eb_user u on u.id = ur.uid
       <where>
           <if test=" map.account != null and map.account !='' " >
               and u.account = #{map.account}
           </if>
           <if test=" map.province != null and map.province !='' " >
               and ur.province = #{map.province}
           </if>
           <if test=" map.city != null and map.city !='' " >
               and ur.city = #{map.city}
           </if>
           <if test=" map.area != null and map.area !='' " >
               and ur.area = #{map.area}
           </if>
           <if test=" map.status != null and map.status !='' " >
               and ur.status = #{map.status}
           </if>
       </where>
       order by ur.id desc
    </select>



</mapper>