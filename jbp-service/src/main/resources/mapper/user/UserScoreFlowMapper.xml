<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jbp.service.dao.UserScoreFlowDao">
    <select id="getList" resultType="com.jbp.common.model.user.UserScoreFlow">
        select *,u.nickname,u.account
        from eb_user_score_flow f
        left join eb_user u on f.uid = u.id
        <where>
            <if test="uid !=null and uid!=''">
                and f.uid=#{uid}
            </if>
        </where>
        order by f.id desc
    </select>
</mapper>
